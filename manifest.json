{
  "manifest_version": 3,
  "name": "Stock Watchlist",
  "version": "1.0",
  "description": "Minimalistic stock watchlist with Alpha Vantage API.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.alphavantage.co/*",
    "https://api.apitube.io/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}