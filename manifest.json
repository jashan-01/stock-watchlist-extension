{
  "manifest_version": 3,
  "name": "Stock Watchlist",
  "version": "1.0",
  "description": "Minimalistic stock watchlist with Alpha Vantage API.",
  "permissions": ["storage", "https://api.apitube.io/*"],
  "host_permissions": [
    "https://www.alphavantage.co/*",
    "https://api.apitube.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}